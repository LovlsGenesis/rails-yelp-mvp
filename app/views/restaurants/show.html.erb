<div class="text-center">
  <div class=restaurant_infos>
    <h1><%= @restaurant.name %></h1>
    <p><%= @restaurant.category %></p>
    <p><%= @restaurant.address %></p>
    <p>Phone Number: <%= @restaurant.phone_number %></p>
  </div>

  <div class="review">
    <h2>Reviews </h2>
      <p><% @restaurant.reviews.each do |review| %></p>
      <% if review.rating >= 1 %>
      <%= '‎★' * review.rating + ('☆' * (5 - review.rating)) %>
      <%= review.content %>
      <% else %>
      <%= '☆' * 5 %>
      <%= review.content %>
      <% end %>
      <% end %>
  </div>


  <div class="redirect mt-5">

    <%= link_to "Back to restaurants", restaurants_path %>
    <%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
    <%= link_to "Edit", edit_restaurant_path(@restaurant) %>
    <%= link_to "Delete", restaurant_path(@restaurant), method: "delete",
          data: { confirm: "Are you sure?" } %>
  </div>
</div>
